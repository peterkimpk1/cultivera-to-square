{
  "manifest_version": 3,
  "name": "Cultivera to Square Invoice",
  "version": "1.0.0",
  "description": "Create Square invoices from Cultivera PRO invoice PDFs",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://zxrtfrqsoaqzjzyerwjl.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
